{% extends 'base.html.twig' %}

{% block title %}Liste des événements{% endblock %}

{% block body %}
<div class="container my-4">
    <h1 class="text-center mb-4">Liste des événements</h1>

    <div class="row">
        {% for event in events %}
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    {% include 'components/_card_img_event.html.twig' %}
                    
                    <div class="card-body">
                        <h5 class="card-title">{{ event.name }}</h5>
                        <p class="card-text">
                            <strong>Date :</strong> {{ event.date|date('d/m/Y')}} à {{ event.date|date('H:i') }}<br>
                            <strong>Lieu :</strong> {{ event.location }}
                        </p>
                        <div class="d-flex justify-content-center">
                            <a href="{{ path('event_view', { id: event.id }) }}" class="btn btn-primary">Voir l'événement</a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-warning text-center" role="alert">
                    Aucun événement disponible.
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
