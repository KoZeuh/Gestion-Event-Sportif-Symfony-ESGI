{% extends 'base.html.twig' %}

{% block title %}Détails de l'événement{% endblock %}

{% block body %}
<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h1 class="h4 text-center m-0">{{ event.name }}</h1>
        </div>
        <div class="card-body">
            <p><strong>Date :</strong> {{ event.date|date('d/m/Y') }}</p>
            <p><strong>Lieu :</strong> {{ event.location }}</p>
        </div>
    </div>

    <div class="card mt-4 shadow-sm">
        <div class="card-header bg-secondary text-white">
            <h2 class="h5 m-0">Liste des Participants</h2>
        </div>
        <div class="card-body">
            {% if event.participants|length > 0 %}
                <ul class="list-group">
                    {% for participant in event.participants %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>
                                <strong>{{ participant.name }}</strong> ({{ participant.email }})
                            </span>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <div class="alert alert-warning text-center m-0">
                    Aucun participant pour cet événement.
                </div>
            {% endif %}
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a href="{{ path('participant_add', { id: event.id }) }}" class="btn btn-success">
            Ajouter un participant
        </a>
        <a href="{{ path('event_list') }}" class="btn btn-secondary">
            Retour à la liste des événements
        </a>
    </div>
</div>
{% endblock %}
